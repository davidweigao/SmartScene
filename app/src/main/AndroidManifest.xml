<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="david.sceneapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="20" />

    <application
        android:name=".Model.SmartSceneApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.WifiActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".Activity.NotificationHandlerActivity" />

        <service
            android:name=".SceneManageService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" >
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <activity
            android:name=".Activity.AppListActivity"
            android:label="@string/title_activity_app_list" >
        </activity>
        <activity
            android:name=".Activity.SceneListActivity"
            android:label="@string/title_activity_scene_list" >
        </activity>
        <activity
            android:name=".Activity.TriggerListActivity"
            android:label="@string/title_activity_wifi_trigger_list" >
        </activity>
        <activity
            android:name=".Activity.AddTriggerOptionActivity"
            android:label="@string/title_activity_add_trigger_option" >
        </activity>
        <activity
            android:name=".Activity.AddWifiTriggerActivity"
            android:label="@string/title_activity_add_wifi_trigger"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name=".Activity.AddWifiTriggerActivity2"
            android:label="@string/title_activity_add_wifi_trigger_activity2" >
        </activity>
        <activity
            android:name=".Activity.AddSceneActivity"
            android:label="@string/title_activity_add_scene" >
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddExceptionActivity"
            android:label="@string/title_activity_add_exception" >
        </activity>
    </application>

</manifest>
